<Window x:Class="Questionnaire.Views.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Questionnaire.Views.Windows"
        mc:Ignorable="d"
        Title="Вход в систему" Height="350" Width="300">
    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Width="250" Height="250" Background="LightGray">
        <StackPanel>
            <Label Content="Логин" Margin="10"/>
            <TextBox x:Name="txbLogin" Margin="10"/>

            <Label Content="Пароль" Margin="10"/>
            <TextBox x:Name="txbPass" Margin="10"/>

            <Button Content="Войти" Margin="20" Click="Button_Click"/>
        </StackPanel>
    </Border>
</Window>
